__stack = __ebss + (32 << 10);
__heap = __stack;

SECTIONS
{
	. = 0x80000000;

	.text :
	{
		*(.text)
		*(.rodata)
	}

	.data :
	{
		*(.data)
	}

	.bss :	
	{
		__bss = .;
		*(.scommon)
		_gp = .;
		*(.sbss)
		*(COMMON)
		*(.bss)
		__ebss = .;
	}

	/DISCARD/ :
	{
		*(.reginfo)
	}
}

ENTRY(_start);
